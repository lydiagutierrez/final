<div class="container mt-5">
    <div class="row">
        <div class="col-sm-8">
            
            <h1><%= @event[:title] %></h1>
            <div class = "mt-4">        
                <p><%= @event[:description] %></p>
            </div>
            <div class="mt-4">
                <% if @current_user %>
                    <a href="/events/<%= @event[:id] %>/rsvps/new" class="btn btn-primary">RSVP</a>
                <% else %>
                    <a href="/logins/new" class="btn btn-danger">Please Login to RSVP</a>
                <% end %>
            </div>
            <div class = "mt-5">
                <% for rsvp in @rsvps %>
                    <div class="media mt-4">
                        <% if rsvp[:going] %>
                            <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                        <% else %>
                            <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                        <% end %>
                        <div class="media-body">
                            <h5 class="mt-0"><%= @users_table.where(id: rsvp[:user_id]).to_a[0][:name] %></h5>
                            <%= rsvp[:comments] %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>

        <div class = "col-sm-4">
            <div class = "mt-2">
                <h3><i class="far fa-calendar-alt"></i>  Date</h3>
                <h6><p><%= @event[:date] %></p></h6>
            </div>
            <div class = "mt-4">
                <h3><i class="fa fa-clock"></i>  Time</h3>
                <h6><p><%= @event[:time] %></p></h6>
            </div>
            <div class = "mt-4">
                <h3><i class="fa fa-location-arrow" aria-hidden="true"></i>  Location</h3>
                <h6><p><%= @event[:location] %></p></h6>
            </div>
            <div class = "mt-4">
                <h3><i class="fa fa-thumbs-up" aria-hidden="true"></i>  Total Attendees</h3>
                <h6><%= @going_count %></h6>
            </div>
        </div>
    </div>
</div>
